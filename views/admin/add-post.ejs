<div class="admin-title">
    <h2>Publicar Novo Item</h2>
</div>

<form action="/add-post" method="POST" enctype="multipart/form-data"> <!-- Adicionado enctype -->

    <label for="title"><b>Nome do Item</b></label>
    <input type="text" placeholder="Escreva o nome do item" name="title" required> <!-- Adicionado required -->
    
    <label for="body"><b>Descrição</b></label>
    <textarea name="body" cols="50" rows="10" required></textarea> <!-- Adicionado required -->

    <label for="estrelas"><b>Estrelas</b></label>
    <input type="text" placeholder="" name="estrelas" required> <!-- Adicionado required -->

    <label for="de"><b>De R$</b></label>
    <input type="text" placeholder="" name="de" required> <!-- Adicionado required -->

    <label for="desconto"><b>Desconto em %</b></label>
    <input type="text" placeholder="" name="desconto" required> <!-- Adicionado required -->

    <label for="por"><b>Por R$</b></label>
    <input type="text" placeholder="" name="por" required> <!-- Adicionado required -->
    
    <label for="vezes_cartao"><b>Ou em "x" Vezes no Cartão</b></label>
    <input type="text" placeholder="" name="vezes_cartao" required> <!-- Adicionado required -->

    <label for="tamanhos"><b>Tamanhos</b></label>
    <input type="text" placeholder="" name="tamanhos" required> <!-- Adicionado required -->

    <label for="estoque"><b>Estoque Disponível</b></label>
    <input type="text" placeholder="" name="estoque" required> <!-- Adicionado required -->

    <label for="image">Imagem da Receita</label>
    <input type="file" class="form-control" name="image" accept="image/*" required> <!-- Adicionado required -->
    
    <input type="submit" value="Add" class="btn">
</form>
